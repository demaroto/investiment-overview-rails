<!-------------------------------------------------- Home - Custos -------------------------------------------------->

<section class="home-custos">
	
	<div class="home-custos-line"></div>
	
	<article class="content">
			<%= image_tag("/assets/Home/custos-img.png", class: 'home-custos-img') %>
			
