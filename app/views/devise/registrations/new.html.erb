
<%= image_tag("Home/logo.png", class: 'logo-header logo-header-home')%>
<section class="cadastro">
  <%= image_tag('Cadastro/img-cadastro.png', class: 'img-cadastro')%>
  <article class="cadastro-content">

    <h1>A Investment Overview com vocÃª</h1>
    <h2>Cadastro</h2>
    <h3>Informe seus Dados</h3>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.text_field :nome, autofocus: true, autocomplete: "off", placeholder: "Nome" %>
      </div>
      
      <div class="field">
        <%= f.email_field :email, autocomplete: "off", placeholder: "Email" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "PRONTO!" %>
      </div>
      
      <div class="erro-mensagem">
        <%= devise_error_messages! %>
      </div>
    <% end %>
    
  </article>

</section>