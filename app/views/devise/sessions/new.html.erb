<%= image_tag('Home/logo.png', class: 'logo-header')%>
<section class="login">

  <%= image_tag('Login/img-login.png', class: 'img-login')%>
  <article class="login-content">

    <h2>Bem Vindo a Investment Overview</h2>
    <h1>Entre com sua conta para iniciar</h1><br><br>
   
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Email" %>
      </div>
    
      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Senha" %>
      </div>
    
      <!-- < if devise_mapping.rememberable? -%>
        <div class="field">
          <= f.check_box :remember_me %>
          <= f.label :remember_me %>
        </div>
      < end -%> -->
    
      <div class="actions">
        <%= f.submit "Login" %>
      </div>
    <% end %>
    
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
       <h3>Ainda não tem uma conta? <%= link_to "Cadastre-se", new_registration_path(resource_name) %> já!</h3>
    <% end -%>

  </article>

</section>
